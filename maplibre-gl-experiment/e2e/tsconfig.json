{
   "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "types": ["node", "@cucumber/cucumber", "@playwright/test"]
   },
   "include": ["**/*.ts"],
   "exclude": ["node_modules"],
   "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node",
      "compilerOptions": {
         "module": "ES2022"
      }
   }
}
